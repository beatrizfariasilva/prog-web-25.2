//EXERCÍCIO 5
function ehPrimo(num){
    let contador=0;
    for (i=1; i<=num; i++){
        if (num%i==0){
            contador++;
        }
    }

    if (contador==2){
        console.log("É primo");
    }

    else{
        console.log("Não é primo");
    }
}

function mostrandoPrimos(num){
    for (i=1; i<=num; i++){
        if (i==1){
            continue;
        }
        if (i%2==0 && i!=2){
            continue;
        }
        else if (i%3==0 && i!=3){
            continue;
        }
        else if (i%5==0 && i!=5){
            continue;
        }
        else if (i%7==0 && i!=7){
            continue;
        }
    
        else{
            console.log(i);
        }
    }
}

const n = prompt("Digite um número que eu direi se ele é primo e mostrarei todos os números primos que existem até ele");
ehPrimo(n);
console.log("Lista de primos até o número digitado: ");
mostrandoPrimos(n);

//EXERCÍCIO 6
function ehPerfeito(num){
    let soma=0;
    for (i=1; i<=num; i++){
        if (num%i==0){
            soma=soma+i;
        }
    }

    if (soma===num){
        console.log("É perfeito");
    }
    else{
        console.log("Não é perfeito");
    }
}

function mostrandoPerfeitos(num){
    let soma=0;
    for(j=1; j<=num; j++){  
        for (i=1; i<=j; i++){
            if (j%i==0){
                soma=soma+i;
            }
        }

        if (soma===j){
            console.log(soma);
        }

        }
}

const perfeito = prompt("Digite um número que eu direi se ele é perfeito e mostrarei todos os números perfeitos que existem até ele")
ehPerfeito(perfeito);
mostrandoPerfeitos(perfeito);

//EXERCÍCIO 7
function impressao(n){
    for(i=1; i<n; i++){
        while (i<0){
            console.log(i);
            i--;
        }
    }
}

const x = prompt("Digite um número inteiro");
impressao(x);

