//EXERCÍCIO 1
function paraCelsius(farenheit){
    return (5/9) * (farenheit-32);
}

function paraFarenheit(celcius){
    return (celcius * 9/5) + 32;
}

function menu() {
    const desejo = prompt("Digite a opção desejada:\n1. Converter de Celsius para Farenheit\n2. Converter de Farenheit para Celsius");
    switch(desejo){
        case "1":
            const f = prompt("Digite a temperatura que deseja converter");
            console.log(paraFarenheit(f)+"°");
            break;
        case "2":
            const c = prompt("Digite a temperatura que deseja converter");
            console.log(paraCelsius(c)+"°");
            break;
        default:
            console.log("Digite 1 ou 2.");
    }
}

menu();




//EXERCÍCIO 2
function soma (n1, n2, n3){
    return n1+n2+n3;
}

function media(){
    return soma(90, 57, 567)/3;
}

console.log(media());




//EXERCÍCIO 3
const valor1 = prompt("Digite um número inteiro");
const valor2 = prompt("Digite um segundo número inteiro");
const valor3 = prompt("Digite um terceiro número inteiro");

function procurarMaior(valor1, valor2, valor3){
    let maior = valor1;

    if (valor2>maior){
        if (valor2>valor3){
            maior=valor2;
        }
        else {
            if (valor3>maior){
                maior=valor3;
            }
        }
    }
    return maior;
}

function procurarMenor(valor1, valor2, valor3){
    let menor = valor1;

    if (valor2<menor){
        if (valor2<valor3){
            menor=valor2;
        }
        else {
            if (valor3<menor){
                menor=valor3;
            }
        }
    }
    return menor;
}

console.log("O maior valor digitado é: "+procurarMaior(valor1, valor2, valor3));
console.log("O menor valor digitado é: "+procurarMenor(valor1, valor2, valor3));

