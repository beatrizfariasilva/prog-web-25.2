//EXERCÍCIO 1: VERIFICAR IDADE PARA VOTAR

const idade = prompt("Digite sua idade aqui");

if (idade<16){
    console.log("Não pode votar.");
}

else if ((idade==16 || idade==17) || idade>70){
    console.log("Voto facultativo");
}

else {
    console.log("Voto obrigatório");
}

//EXERCÍCIO 2: CLASSIFICAR NOTAS ESCOLARES
const nota = prompt("Digite a nota recebida");

if (nota>=7){
    console.log("Situação: Aprovado");
}

else if (nota>=5 && nota<=6.9){
    console.log("Situação: Recuperação");
}

else {
    console.log("Situação: Reprovado");
}

//EXERCÍCIO 3: CHECAR NUMERO PAR OU IMPAR
const n = prompt("Digite um número que direi se é par ou ímpar");

if (n%2==0){
    console.log("É par");
}

else {
    console.log("É ímpar");
}

//EXERCÍCIO 4: IDENTIFICADOR DE ESTAÇÕES DO ANO
const atual = prompt("Digite o mês atual e eu direi em qual estação do ano você está");

if (atual==12 || atual==1 || atual==2 ){
    console.log("Você está no verão");
}

else if (atual==3 || atual==4 || atual==5 ){
    console.log("Você está no outono");
}

else if (atual==6 || atual==7 || atual==8 ){
    console.log("Você está no inverno");
}

else {
    console.log("Você está na primavera");

}

//EXERCÍCIO 5: QUAL É MAIOR
const n1 = prompt("Digite o primeiro numero");
const n2 = prompt("Digite o segundo numero");
const n3 = prompt("Digite o terceiro numero");

//EXERCÍCIO 6: VERIFICAR LOGIN
const usuario = prompt("Digite o seu login");
const senha=prompt("Digite sua senha");

if (usuario=='admin' && senha=='1234'){
    console.log('Login bem-sucedido');
}

else{
    console.log('Usuário ou senha inválidos')
}

//EXERCÍCIO 7: CALCULAR DESCONTO EM COMPRAS
const valor = prompt("Digite o valor da compra");

if (valor<100){
    console.log('Não haverá desconto na compra');
}

else if (valor>=100 && valor<=500){
    console.log('Haverá 10% de desconto no valor da compra.');
    console.log(`Valor antes: R${valor}`);
    console.log(`Valor final: R${valor*0.9}`);
}

else{
    console.log('Haverá 20% de desconto no valor da compra.');
    console.log(`Valor antes: R${valor}`);
    console.log(`Valor final: R${valor*0.8}`);
}

//EXERCÍCIO 8: CLASSIFICAR IMC
const peso = prompt("Digite o seu peso atual");
const altura = prompt("Digite o sua altura atual");

let IMC = (peso/(altura*altura));

if (IMC<18.5){
    console.log('Você está abaixo do peso');
}

else if (IMC>=18.5 && IMC<25){
    console.log('Você está normal');
}

else if (IMC>=25 && IMC<30){
    console.log('Você está com sobrepeso');
}

else{
    console.log('Você está com obesidade');
}

//EXERCÍCIO 9: VALIDAR DIA DA SEMANA
const dia = prompt("Digite um número de 1 a 7");

if (dia==1){
    console.log('1=domingo');
}

else if (dia==2){
    console.log('2=segunda');
}

else if (dia==3){
    console.log('3=terça');
}

else if (dia==4){
    console.log('4=quarta');
}

else if (dia==5){
    console.log('5=quinta');
}

else if (dia==6){
    console.log('6=sexta');
}

else if (dia==7){
    console.log('7=sábado');
}

else {
    console.log('Número inválido');
}

//EXERCÍCIO 10: JOGO DE ADVINHAÇÃO SIMPLES
const numsecreto=8;
const advinhe=prompt('Advinhe o número que estou pensando');

if (advinhe!=numsecreto){
    if (advinhe<numsecreto){
        console.log('Muito baixo!');
    }
    else if (advinhe>numsecreto){
        console.log('Muito alto!')
    }
}
else{
    console.log('Parabéns, você acertou!')
}
